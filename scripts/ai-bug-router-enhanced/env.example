# Enhanced AI Bug Router Configuration
# Copy this file to .env and fill in your actual values

# ===================================
# REQUIRED CONFIGURATION
# ===================================

# OpenAI API Key for issue classification
OPENAI_API_KEY=your-openai-api-key-here

# ClickUp API Token for ticket creation
CLICKUP_API_TOKEN=your-clickup-api-token-here

# Slack Bot Token for notifications and reactions
SLACK_TOKEN=your-slack-bot-token-here

# ===================================
# OPTIONAL CONFIGURATION
# ===================================

# Default Slack channel for notifications (Mereka team channel)
SLACK_CHANNEL=C02GDJUE8LW

# GitHub Token for PR creation (if using GitHub integration)
GITHUB_TOKEN=your-github-token-here

# Environment setting
NODE_ENV=development

# ===================================
# CLICKUP CONFIGURATION
# ===================================

# ClickUp Team ID (Mereka team)
CLICKUP_TEAM_ID=2627356

# ClickUp Default List ID for bug tickets
CLICKUP_BUG_LIST_ID=900501824745

# ===================================
# SLACK CONFIGURATION
# ===================================

# Slack Team ID
SLACK_TEAM_ID=bijimereka

# Development channel for testing
SLACK_DEV_CHANNEL=C02GDJUE8LW

# ===================================
# AI CLASSIFICATION SETTINGS
# ===================================

# Minimum confidence threshold for AI code generation (0.0 - 1.0)
AI_CONFIDENCE_THRESHOLD=0.7

# Enable/disable AI code generation
ENABLE_AI_CODE_GENERATION=true

# Enable/disable user education responses
ENABLE_USER_EDUCATION=true

# ===================================
# DEDUPLICATION SETTINGS
# ===================================

# Time window for duplicate detection (days)
DUPLICATE_DETECTION_WINDOW=7

# Enable/disable duplicate prevention
ENABLE_DUPLICATE_PREVENTION=true

# ===================================
# WORKFLOW SETTINGS
# ===================================

# Enable/disable emoji feedback system
ENABLE_EMOJI_FEEDBACK=true

# Enable/disable daily workflow automation
ENABLE_DAILY_WORKFLOW=true

# Maximum issues to process per daily run
MAX_DAILY_ISSUES=50

# ===================================
# LOGGING AND MONITORING
# ===================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable/disable detailed logging
ENABLE_DETAILED_LOGGING=true

# Enable/disable performance metrics
ENABLE_METRICS=true

# ===================================
# HOW TO GET THESE VALUES
# ===================================

# OPENAI_API_KEY:
# 1. Go to https://platform.openai.com/api-keys
# 2. Create a new API key
# 3. Copy the key (starts with sk-)

# CLICKUP_API_TOKEN:  
# 1. Go to ClickUp Settings → Apps
# 2. Generate API Token
# 3. Copy the token (starts with pk_)

# SLACK_TOKEN:
# 1. Go to https://api.slack.com/apps
# 2. Create/select your app
# 3. Go to OAuth & Permissions
# 4. Copy Bot User OAuth Token (starts with xoxb-)

# SLACK_CHANNEL:
# 1. Open Slack channel
# 2. Click channel name → Copy link
# 3. Extract channel ID from URL (starts with C)

# GITHUB_TOKEN:
# 1. Go to GitHub Settings → Developer settings → Personal access tokens
# 2. Generate new token with repo permissions
# 3. Copy the token (starts with ghp_ or github_pat_)
